<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
</head>
<body>
    {% if errors|length %}
        {% for error in errors %}
            <p class="error">{{ error }}</p>
        {% endfor %}
    {% endif %}

    <form action="{{ url('pp_security_login') }}" method="post">
        <input type="text" name="username" />
        <input type="password" name="password" />
        <input type="submit" />
    </form>
</body>
</html>
