{% extends '::base.html.twig' %}

{% block title %}Edit a Property{% endblock %}

{% block body %}

    <div class="container">
        <div class="page-header">
            <h1>Editing a Property <small>for {{ app.user.username }}</small></h1>
        </div>

        {{ form_start(form, { 'attr': { 'class': 'form-horizontal' } }) }}
            {{ form_row(form._token) }}
            {{ form_errors(form) }}

            <div class="form-group">
                <label for="" class="col-sm-2 control-label">
                    {{ form_label(form.title) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}
                    {% if form_errors(form.title) %}
                        <br />
                        <div class="alert alert-danger">
                            {{ form_errors(form.title) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-sm-2 control-label">
                    {{ form_label(form.description) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
                    {% if form_errors(form.description) %}
                        <br />
                        <div class="alert alert-danger">
                            {{ form_errors(form.description) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-sm-2 control-label">
                    {{ form_label(form.buildingName) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.buildingName, { 'attr': { 'class': 'form-control' } }) }}
                    {% if form_errors(form.buildingName) %}
                        <br />
                        <div class="alert alert-danger">
                            {{ form_errors(form.buildingName) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-sm-2 control-label">
                    Address line 1
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.address1, { 'attr': { 'class': 'form-control' } }) }}
                    {% if form_errors(form.address1) %}
                        <br />
                        <div class="alert alert-danger">
                            {{ form_errors(form.address1) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-sm-2 control-label">
                    Address line 2
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.address2, { 'attr': { 'class': 'form-control' } }) }}
                    {% if form_errors(form.address2) %}
                        <br />
                        <div class="alert alert-danger">
                            {{ form_errors(form.address2) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-sm-2 control-label">
                    {{ form_label(form.town) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.town, { 'attr': { 'class': 'form-control' } }) }}
                    {% if form_errors(form.town) %}
                        <br />
                        <div class="alert alert-danger">
                            {{ form_errors(form.town) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-sm-2 control-label">
                    {{ form_label(form.postcode) }}
                </label>
                <div class="col-sm-10">
                    {{ form_widget(form.postcode, { 'attr': { 'class': 'form-control' } }) }}
                    {% if form_errors(form.postcode) %}
                        <br />
                        <div class="alert alert-danger">
                            {{ form_errors(form.postcode) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label for="" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-success' } }) }}
                </div>
            </div>
        {{ form_end(form, { 'render_rest': false }) }}
    </div>

{% endblock %}
